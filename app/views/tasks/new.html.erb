<div class="container mt-5">
  <div class="card shadow-sm">
    <div class="card-body">
      <h2 class="mb-4"><%= @task.new_record? ? "Create Task" : "Edit Task" %></h2>

      <%= form_with model: @task, class: "row g-3" do |f| %>

        <div class="col-12">
          <%= f.label :title, class: "form-label" %>
          <%= f.text_field :title, class: "form-control" %>
        </div>

        <div class="col-12">
          <%= f.label :details, class: "form-label" %>
          <%= f.text_field :details, class: "form-control" %>
        </div>

        <div class="col-12 form-check mt-3">
          <%= f.check_box :completed, class: "form-check-input", id: "task_completed" %>
          <%= f.label :completed, class: "form-check-label", for: "task_completed" %>
        </div>

        <div class="col-12 mt-4">
          <%= f.submit (@task.new_record? ? "Create Task" : "Save Changes"),
                class: "btn btn-primary" %>
        </div>

      <% end %>
    </div>
  </div>
</div>

